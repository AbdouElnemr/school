<odoo>
    <data>
        <record model="ir.ui.view" id="task_student_tree">
            <field name="name">school.task.tree_view</field>
            <field name="model">school.task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="student_form" model="ir.ui.view">
            <field name="name">student.form</field>
            <field name="model">school.task</field>
            <field name="arch" type="xml">
                <form string="Task">
                    <sheet>

                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="age"/>
                        </group>
                        <notebook>
                            <page string="Grades">

                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="action_task" model="ir.actions.act_window">
            <field name="name">Task</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!--            <field name="context">{"search_default_male":1}</field>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a first Task
                </p>
            </field>
        </record>

        <menuitem id="task_student" name="Task" parent="school_root" action="action_task" sequence="1"/>
    </data>
</odoo>